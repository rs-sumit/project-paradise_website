<% layout("layout/boilerplate") -%>
<script>
    const mapToken= "<%= process.env.MAP_TOKEN %>";
    const id = <%- JSON.stringify(id) %>;
  
</script>
    <div class="content col-8 offset-2">
        <h1>
            <%= id.title %>
        </h1>
        <div class="card show">
            <img src=<%=id.image.url%> class="card-img" alt="Listing image">
            <div class="card-body">
                <p class="card-text">
                    Owned by <I>
                        <%= id.owner.username %>
                    </I>
                    <br>
                    <%= id.description %>
                        <br>&#8377;
                        <%= id.price.toLocaleString("en-IN") %>/Night
                            <br>
                            <%= id.location %>
                                <br>
                                <%= id.country %>
                </p>
                <div class="row">
                    <div class="col-1">
                        <%if(curruser && curruser._id.equals(id.owner._id)){ %>
                            <a class="btn btn-warning" href="/listing/<%=id._id %>/edit">Edit </a>
                    </div>
                    <div class="col-2">
                        <form method="post" action="/listing/<%=id._id %>?_method=DELETE">
                            <button class="btn btn-danger">Delete </button>
                        </form>

                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>


    <!-- REVIEW-FORM-->
    <% if(curruser){ %>
        <div>
            <form class="needs-validation" method="post" action="/listing/<%= id._id %>/review"
                novalidate>
                <div>
                    <fieldset class="starability-slot">
                        <legend>Rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div>
                    <label class="form-label" for="comment">Comment</label>
                    <textarea class="form-control" name="review[comment]" id="comment" rows="3" cols="35"
                        placeholder="write some comment" required></textarea>
                    <div class="invalid-feedback">please write some comment</div>
                </div>
                <br>
                <button class="btn btn-outline-primary ">comment</button>
            </form>
        </div>
        <script src="/js/script.js"></script>
       <hr>
        <% } %>
            <div>
                <%if(id.reviews.length){%>
                    <H3>All reviews:</H3><br>
                    <%}%>
                        <div class="row row-cols-md-2">
                            <% for(let review of id.reviews){ %>
                                <div class="card col-md-6" style="width:40rem;">
                                    <div class="card-body">
                                        <p class="starability-result" data-rating="<%= review.rating %>">
                                            Rated: 3 stars
                                        </p>
                                        <h5 class="card-subtitle mb-2 text-body-secondary">
                                            <%=review.comment%>
                                        </h5>
                                        <h6 class="card-title">@<%= review.auther.username %>
                                        </h6>
                                    </div>
                                    <% if(curruser && curruser._id.equals(review.auther._id)){ %>
                                        <form method="post"
                                            action="/listing/<%= id._id %>/review/<%= review._id %>/destroy?_method=Delete">
                                            <button style="width:5rem;" class="btn btn-dark">Delete</button>
                                        </form>
                                        <% } %>
                                </div>
                                <%}%>  
                        </div>
                        <%if(id.reviews.length){%>
                            <hr>
                            <%}%>
            </div>

            <!-- MAP -->
            <div class="map col-12">
                <h3>Where You'll be</h3>
                <div id="map"></div>
                
            </div>
            <script src="/js/map.js"></script>