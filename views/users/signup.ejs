<% layout("layout/boilerplate.ejs"); %>
    <div class="col-6 offset-3">
        <h1>Create new Account</h1>
        <form class="needs-validation" method="post" action="/signup" novalidate>
            <div>
                <label class="form-label" for="username">Username</label>
                <input name="username" class="form-control" id="username" type="text" required>
                <div class="invalid-feedback">Please fill the username</div>
            </div>
            <br>
            <div>
                <label class="form-label" for="email">Email ID</label>
                <input name="email" class="form-control" id="email" type="text" required>
                <div class="invalid-feedback">Please fill your email id</div>
            </div>
            <br>
            <div>
                <label class="form-label" for="password">Password</label>
                <input name="password" class="form-control" id="password" type="password" required>
                <div class="invalid-feedback">Please fill the password</div>
            </div>
            <br>
            <div class="row ">
                <div class="btn-group" role="group">
                    <button class="btn btn-primary col-6" selected>sign Up</button>
                    <a class="btn btn-outline-primary col-6" href="/signin">Sign In</a>
                </div>
            </div>
        </form>
    </div>
    <script src="js/script.js"></script>